<Window x:Class="StudentLibraryApp.ArchiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="АРХІВ ЗДАНИХ КНИГ" Height="700" Width="1100"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen">
    <!-- Головний контейнер Grid -->
    <Grid Margin="20">
        <!-- Визначення рядків у Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок вікна -->
        <TextBlock Text="АРХІВ ЗДАНИХ КНИГ" 
                   FontSize="32" FontWeight="Bold" 
                   Foreground="#2C3E50" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Таблиця для відображення архіву -->
        <DataGrid x:Name="dgArchive" Grid.Row="1" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  AlternatingRowBackground="#F8F9FA"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="All">
            <!-- Визначення колонок таблиці -->
            <DataGrid.Columns>
                <!-- Колонка "Читач" -->
                <DataGridTextColumn Header="Читач" Binding="{Binding FullName}" Width="220"/>
                <!-- Колонка "Книга" -->
                <DataGridTextColumn Header="Книга" Binding="{Binding Title}" Width="320"/>
                <!-- Колонка "Видано" -->
                <DataGridTextColumn Header="Видано" Binding="{Binding LoanDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                <!-- Колонка "Здано" -->
                <DataGridTextColumn Header="Здано" Binding="{Binding ReturnDate, StringFormat=dd.MM.yyyy}" Width="120"/>
                <!-- Колонка "Штраф, грн" -->
                <DataGridTextColumn Header="Штраф, грн" Binding="{Binding FineAmount}" Width="100"/>
                <!-- Колонка "Статус" -->
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>