<Window x:Class="StudentLibraryApp.ManageReadersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Керування читачами" Height="650" Width="900"
        Background="#ECF0F1" WindowStartupLocation="CenterScreen">
    <!-- Головний контейнер Grid -->
    <Grid Margin="20">
        <!-- Визначення рядків у Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок вікна -->
        <TextBlock Text="КЕРУВАННЯ ЧИТАЧАМИ" FontSize="28" FontWeight="Bold" 
                   Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Поле для пошуку читачів -->
        <TextBox x:Name="txtSearch" Grid.Row="1" Height="40" VerticalAlignment="Top" 
                 TextChanged="txtSearch_TextChanged" Margin="0,0,0,10"/>
        
        <!-- Таблиця для відображення списку читачів -->
        <DataGrid x:Name="dgReaders" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionChanged="dgReaders_SelectionChanged" Margin="0,50,0,20">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер картки" Binding="{Binding CardNumber}" Width="120"/>
                <DataGridTextColumn Header="ПІБ" Binding="{Binding FullName}" Width="2*"/>
                <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="150"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                <DataGridTextColumn Header="Тип" Binding="{Binding ReaderType}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Секція з полями для додавання/редагування читача -->
        <Grid Grid.Row="2">
            <!-- Визначення колонок у Grid -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Ліва колонка з полями вводу -->
            <StackPanel Grid.Column="0" Margin="10">
                <TextBlock Text="Номер картки (наприклад: ST0001):"/>
                <TextBox x:Name="txtCardNumber" Height="35" Margin="0,5"/>
                <TextBlock Text="ПІБ:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtFullName" Height="35" Margin="0,5"/>
                <TextBlock Text="Телефон:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtPhone" Height="35" Margin="0,5"/>
            </StackPanel>

            <!-- Центральна колонка з полями вводу -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Email:"/>
                <TextBox x:Name="txtEmail" Height="35" Margin="0,5"/>
                <TextBlock Text="Тип читача:" Margin="0,10,0,0"/>
                <ComboBox x:Name="cmbReaderType" Height="35" Margin="0,5">
                    <ComboBoxItem Content="Студент"/>
                    <ComboBoxItem Content="Викладач"/>
                </ComboBox>
                <TextBlock Text="Група/Кафедра:" Margin="0,10,0,0"/>
                <TextBox x:Name="txtGroup" Height="35" Margin="0,5"/>
            </StackPanel>

            <!-- Права колонка з кнопками керування -->
            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="20,0">
                <Button Content="Додати" Height="45" Margin="0,10" 
                        Background="#27AE60" Foreground="White" FontSize="16" Click="AddReader_Click"/>
                <Button Content="Оновити" Height="45" Margin="0,10" 
                        Background="#3498DB" Foreground="White" FontSize="16" Click="UpdateReader_Click"/>
                <Button Content="Очистити" Height="45" Margin="0,10" 
                        Background="#95A5A6" Foreground="White" FontSize="16" Click="Clear_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>