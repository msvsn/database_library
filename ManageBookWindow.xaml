<Window x:Class="StudentLibraryApp.ManageBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Керування книгою" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#ECF0F1">
    <!-- Головний контейнер Grid -->
    <Grid Margin="20">
        <!-- Панель для розміщення елементів форми -->
        <StackPanel>
            <!-- Поле для назви книги -->
            <TextBlock Text="Назва книги:" FontWeight="Bold"/>
            <TextBox x:Name="txtTitle" Margin="0,5,0,10"/>

            <!-- Випадаючий список для вибору автора -->
            <TextBlock Text="Автор:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbAuthor" DisplayMemberPath="FullName" SelectedValuePath="AuthorID" Margin="0,5,0,10"
                      IsEditable="True"/>

            <!-- Випадаючий список для вибору жанру -->
            <TextBlock Text="Жанр:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbGenre" DisplayMemberPath="Name" SelectedValuePath="GenreID" Margin="0,5,0,10"
                      IsEditable="True"/>

            <!-- Випадаючий список для вибору видавництва -->
            <TextBlock Text="Видавництво:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbPublisher" DisplayMemberPath="Name" SelectedValuePath="PublisherID" Margin="0,5,0,10"
                      IsEditable="True"/>

            <!-- Поле для року видання -->
            <TextBlock Text="Рік видання:" FontWeight="Bold"/>
            <TextBox x:Name="txtYear" Margin="0,5,0,10"/>

            <!-- Поле для ISBN -->
            <TextBlock Text="ISBN:" FontWeight="Bold"/>
            <TextBox x:Name="txtIsbn" Margin="0,5,0,10"/>

            <!-- Поле для кількості -->
            <TextBlock Text="Кількість:" FontWeight="Bold"/>
            <TextBox x:Name="txtQuantity" Margin="0,5,0,10"/>

            <!-- Панель з кнопками "Зберегти" та "Скасувати" -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Зберегти" Width="100" Height="30" Click="Save_Click" Margin="10,0"/>
                <Button Content="Скасувати" Width="100" Height="30" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
