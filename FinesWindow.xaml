<Window x:Class="StudentLibraryApp.FinesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Керування штрафами" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" Background="#ECF0F1">
    <!-- Головний контейнер Grid -->
    <Grid Margin="20">
        <!-- Визначення рядків у Grid -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок вікна -->
        <TextBlock Text="ПОТОЧНІ ШТРАФИ" FontSize="28" FontWeight="Bold" 
                   Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Поле для пошуку за ПІБ -->
        <TextBox x:Name="txtSearch" Grid.Row="1" Height="35" VerticalAlignment="Top" 
                 TextChanged="txtSearch_TextChanged" Margin="0,0,0,10"
                 Text="Пошук за ПІБ..."/>

        <!-- Таблиця для відображення штрафів -->
        <DataGrid x:Name="dgFines" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" Margin="0,45,0,0">
            <!-- Визначення колонок таблиці -->
            <DataGrid.Columns>
                <!-- Колонка "Читач" -->
                <DataGridTextColumn Header="Читач" Binding="{Binding FullName}" Width="*"/>
                <!-- Колонка "Книга" -->
                <DataGridTextColumn Header="Книга" Binding="{Binding Title}" Width="*"/>
                <!-- Колонка "Сума штрафу" -->
                <DataGridTextColumn Header="Сума штрафу" Binding="{Binding FineAmount, StringFormat='N2'}" Width="150"/>
                <!-- Колонка "Дія" з кнопкою "Сплатити" -->
                <DataGridTemplateColumn Header="Дія">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Сплатити" Click="PayFine_Click" Tag="{Binding LoanID}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
